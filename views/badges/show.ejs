<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/headmeta %>
    <title>Badge</title>
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/users/<%= user._id %>"><button>Back to Profile</button></a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h1><%= user.displayName %>'s <%= badge.title %> Badge</h1>
        <ul>
            <% badge.events.forEach((event)=>{ %>
                <li><img src="<%= event.img %>" alt="<%= event.img %>"><br>
                <%= event.description %></li>
            <% })%>
        </ul>
        <section>
            <% if(user._id.toString() === sessionId.toString()){ %>
            <form action="/users/<%= user._id %>/badges/<%= badge._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete this badge</button>
            </form>
            <% } %>



        </section>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
    
</body>
</html>